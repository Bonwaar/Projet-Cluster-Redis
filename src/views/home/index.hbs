<div class="container">
  <h1 class="title">Demonstration du cluster Redis</h1>
  {{#if dataSaved}}
    <span>Données sauvegardées avec succès</span>
  {{/if}}

  <form action="/save-data" method="post">
    <fieldset>
      <label for="redisValue">Entrez un clé unique</label><br/>
      <input type="text" id="redisValue" placeholder="clé-unique" name="key" required/>
    </fieldset>
    <fieldset>
      <label for="redisKey">Entrez une valeur</label><br/>
      <input type="text" id="redisKey" placeholder="valeur-attribuée" name="value" required/>
    </fieldset>
    <input type="submit" value="Envoyer au cluster Redis"/>
  </form>

